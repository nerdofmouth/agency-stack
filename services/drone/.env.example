# Drone CI Configuration for AgencyStack
# Copy this file to .env and modify as needed

# General Configuration
DRONE_SERVER_HOST=drone.your-domain.com
DRONE_SERVER_PROTO=https
DRONE_RPC_SECRET=generate-a-secret-here

# GitHub Authentication (if using GitHub)
DRONE_GITHUB_CLIENT_ID=your-github-client-id
DRONE_GITHUB_CLIENT_SECRET=your-github-client-secret

# Runner Configuration
DRONE_RPC_HOST=drone.your-domain.com
DRONE_RPC_PROTO=https
DRONE_RUNNER_CAPACITY=2
DRONE_RUNNER_NAME=agent-1

# Database Settings
DRONE_DATABASE_DRIVER=sqlite3
DRONE_DATABASE_DATASOURCE=/data/database.sqlite

# User Management
DRONE_USER_CREATE=username:admin,admin:true

# AgencyStack Integration
DRONE_AGENCYSTACK_MONITOR=true
DRONE_BUDDY_SYSTEM_ENABLED=true
