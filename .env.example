# AgencyStack Environment Configuration (.env.example)
# Copy this file to .env and configure your environment variables

# Basic Configuration
DOMAIN=agency.example.com
CLIENT_ID=default
ADMIN_EMAIL=admin@agency.example.com
ADMIN_PASSWORD=changeme_immediately
INSTALLATION_TYPE=full # Options: minimal, core, full, custom

# Security Configuration
ENABLE_SSL=true
ENABLE_FAIL2BAN=true
ENABLE_CROWDSEC=true
SECURITY_LEVEL=high # Options: basic, standard, high, extreme
ENABLE_AUTO_UPDATES=false
SECRET_KEY=change_this_random_string
JWT_SECRET=change_this_random_string_too

# Authentication and SSO
ENABLE_SSO=true
KEYCLOAK_URL=https://auth.agency.example.com
KEYCLOAK_REALM=agency_stack
KEYCLOAK_CLIENT_ID=agency_dashboard
KEYCLOAK_CLIENT_SECRET=change_this_client_secret

# Email Configuration (Mailu)
MAIL_SERVER=mail.agency.example.com
POSTMASTER=postmaster@agency.example.com
MAIL_DOMAIN=agency.example.com
ENABLE_DKIM=true
DKIM_SELECTOR=mail
MAIL_WEBMAIL=roundcube

# Database Configuration
DB_TYPE=postgresql # Options: postgresql, mysql
DB_HOST=localhost
DB_PORT=5432
DB_USER=agency_stack
DB_PASSWORD=change_this_db_password
DB_NAME=agency_stack

# AI and Automation
ENABLE_AI=true
ENABLE_OPENAI=false # Set to true if using external OpenAI APIs
OPENAI_API_KEY=your_api_key_if_enabled
ENABLE_OLLAMA=true
ENABLE_LANGCHAIN=true
VECTOR_DB_TYPE=chroma # Options: chroma, qdrant, weaviate

# Infrastructure
DOCKER_REGISTRY=docker.io
ENABLE_PORTAINER=true
ENABLE_TRAEFIK=true
METRICS_ENABLED=true
LOKI_RETENTION_DAYS=30
PROMETHEUS_RETENTION_DAYS=15
LOG_LEVEL=info # Options: debug, info, warn, error

# Component-specific Configurations
PEERTUBE_ADMIN_EMAIL=peertube@agency.example.com
PEERTUBE_ADMIN_PASSWORD=change_this_admin_password
WORDPRESS_URL=blog.agency.example.com
GHOST_URL=news.agency.example.com
SEAFILE_URL=files.agency.example.com
FOCALBOARD_URL=boards.agency.example.com

# Multi-tenancy Configuration
ENABLE_MULTI_TENANCY=true
DEFAULT_CLIENT_ID=default
CLIENT_ISOLATION_LEVEL=full # Options: shared, partial, full

# Resource Limits
MAX_CONTAINER_MEMORY=2g
MAX_CONTAINER_CPU=1.0
DISK_QUOTA_GB=100
