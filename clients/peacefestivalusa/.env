# PeaceFestivalUSA WordPress - Environment Configuration
# Following AgencyStack Charter v1.0.3 principles
# This is the example file - copy to .env and modify as needed

# Client identification
CLIENT_ID=peacefestivalusa
DOMAIN=localhost:8082

# Directory structure (following AgencyStack conventions)
DATA_DIR=/opt/agency_stack/clients/peacefestivalusa
LOGS_DIR=/var/log/agency_stack/clients/peacefestivalusa
BACKUP_DIR=/opt/agency_stack/clients/peacefestivalusa/backups

# WordPress database configuration
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=change_this_password
WORDPRESS_TABLE_PREFIX=wp_

# Database root credentials (for administration)
MYSQL_ROOT_PASSWORD=change_this_root_password

# WordPress application settings
WORDPRESS_DEBUG=false
WORDPRESS_MEMORY_LIMIT=256M

# Network configuration
TRAEFIK_NETWORK=traefik_network
