# PeaceFestivalUSA WordPress - Production Environment Configuration
# Following AgencyStack Charter v1.0.3 principles
# Generated on: 2025-05-09

# Client identification
CLIENT_ID=peacefestivalusa
DOMAIN=peacefestivalusa.alpha.nerdofmouth.com

# Directory structure (following AgencyStack conventions)
DATA_DIR=/opt/agency_stack/clients/peacefestivalusa
LOGS_DIR=/var/log/agency_stack/clients/peacefestivalusa
BACKUP_DIR=/opt/agency_stack/clients/peacefestivalusa/backups

# WordPress database configuration
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=${WP_DB_PASSWORD:-$(openssl rand -base64 16)}
WORDPRESS_TABLE_PREFIX=wp_

# Database root credentials (for administration)
MYSQL_ROOT_PASSWORD=${MYSQL_ROOT_PASSWORD:-$(openssl rand -base64 20)}

# WordPress application settings
WORDPRESS_DEBUG=false
WORDPRESS_MEMORY_LIMIT=256M

# Network configuration
TRAEFIK_NETWORK=traefik_network

# Multi-tenant and Keycloak integration
ENABLE_KEYCLOAK=true
KEYCLOAK_REALM=agencystack
KEYCLOAK_CLIENT_ID=peacefestivalusa
KEYCLOAK_URL=https://auth.alpha.nerdofmouth.com
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=${KEYCLOAK_ADMIN_PASSWORD:-$(openssl rand -base64 16)}

# Cloud integration
ENABLE_CLOUD=true
CLOUD_PROVIDER=local
CLOUD_STORAGE_PATH=/opt/agency_stack/clients/peacefestivalusa/cloud_storage

# Multi-tenant settings
MULTI_TENANT=true
TENANT_ISOLATION_LEVEL=high
